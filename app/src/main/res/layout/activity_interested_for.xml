<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.Activities.InterestedForActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Que dÃ©sirez-vous ?"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"/>

        <CheckBox
            android:id="@+id/relation_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_choice"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:text="Une relation avant le mariage"
            android:textSize="20sp"
            android:buttonTint="@color/purple_200"/>

        <CheckBox
            android:id="@+id/mariage_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relation_checkbox"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="Mariage directement"
            android:textSize="20sp"
            android:buttonTint="@color/purple_200"/>

        <TextView
            android:id="@+id/add_picture_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mariage_checkbox"
            android:gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:text="Cliquer ici pour ajouter une photo"
            android:textSize="16sp"
            android:textColor="@color/purple_200"
            android:clickable="true"
            android:focusable="true"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/profil_picture_user"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_below="@+id/add_picture_user"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="photo de profil de l'utilisateur"
            android:background="@drawable/border_imageview"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/to_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profil_picture_user"
            android:layout_marginTop="100dp"
            android:text="Suivant"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</ScrollView>